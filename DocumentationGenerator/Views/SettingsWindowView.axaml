<Window x:Class="DocumentationGenerator.Views.SettingsWindowView"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:helpers="using:DocumentationGenerator.Helpers"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:DocumentationGenerator.ViewModels"
        Width="700"
        Height="600"
        MinWidth="500"
        MinHeight="500"
        d:DesignHeight="500"
        d:DesignWidth="600"
        x:DataType="vm:SettingsViewModel"
        Background="#1a1a1a"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">
        
    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>
    <Window.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid RowDefinitions="25,50,*">
            <Grid Background="#151515" PointerPressed="OnTopGridPointerPressed">

                <Label HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Stretch" Content="Settings" />
                <Button HorizontalAlignment="Right" VerticalAlignment="Center" Click="OnCloseButtonClicked"
                        Content="X" CornerRadius="15" FontSize="10" />
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <RadioButton Classes="TabRadioButton" Content="General" IsChecked="{Binding SelectedTab, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static vm:SettingsTab.General}}" />
                <RadioButton Classes="TabRadioButton" Content="Colours" IsChecked="{Binding SelectedTab, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static vm:SettingsTab.Colours}}" />
                <RadioButton Classes="TabRadioButton" Content="Other" IsChecked="{Binding SelectedTab, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static vm:SettingsTab.Fonts}}" />
            </StackPanel>

            <UserControl Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="{Binding CurrentUserControl}" />


        </Grid>
    </Border>

</Window>
