<Window x:Class="DocumentationGenerator.MVVM.View.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentationGenerator.MVVM.View"
        mc:Ignorable="d"
        Title="SettingsView" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="ColourPickerLabels" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <Style x:Key="ColourPickers" TargetType="xctk:ColorPicker">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="20,0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <StackPanel>
                <Label Style="{StaticResource ColourPickerLabels}" Content="Class Declaration Colour:"/>
                <xctk:ColorPicker Style="{StaticResource ColourPickers}" SelectedColor="{Binding ClassDeclarationColour, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel>
                <Label Style="{StaticResource ColourPickerLabels}" Content="Struct Declaration Colour:"/>
                <xctk:ColorPicker Style="{StaticResource ColourPickers}" SelectedColor="{Binding StructDeclarationColour, Mode=TwoWay}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label Style="{StaticResource ColourPickerLabels}" Content="Primitive Declaration Colour:"/>
            <xctk:ColorPicker Style="{StaticResource ColourPickers}" SelectedColor="{Binding PrimitiveDeclarationColour, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1">
            <Label Style="{StaticResource ColourPickerLabels}" Content="Enum Declaration Colour:"/>
            <xctk:ColorPicker Style="{StaticResource ColourPickers}" SelectedColor="{Binding EnumDeclarationColour, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Grid.Column="3" Grid.Row="1">
            <Label Style="{StaticResource ColourPickerLabels}" Content="Interface Declaration Colour:"/>
            <xctk:ColorPicker Style="{StaticResource ColourPickers}" SelectedColor="{Binding InterfaceDeclarationColour, Mode=TwoWay}"/>
        </StackPanel>

        <Button Grid.Column="3" Grid.Row="2" Margin="40,5" Content="Close" Click="OnCloseButtonClicked"></Button>
    </Grid>
</Window>
